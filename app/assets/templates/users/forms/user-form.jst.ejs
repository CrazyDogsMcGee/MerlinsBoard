<h1>Edit User Informationn</h1>

<section class="form-errors">
</section>

<form class="user-form" enctype="multipart/form-data">
  <label for="fname">First Name</label>
  <input type="text" id="fname" name="fname" value="<%=user.escape('fname')%>">
  <label for="lname">Last Name</label>
  <input type="text" id="lname" name="lname" value="<%=user.escape('lname')%>">
  <br>
  
  <label for="email">Email</label>
  <input type="text" id="email" name="email" value="<%=user.escape('email')%>">
  <br>
  
  <label for="avatar">Profile Image</label>
  <input type="file" id="avatar" name="avatar" class="user-form-fileinput">
  <br>
  
  <label for="password">Provide password to confirm changes</label>
  <input type="password" id="password" name="supplied_password">
  <input type="submit" value="Submit Changes">
</form>

<section class="user-imgpreview">
  <img src="http://dumpcast.com/wp-content/uploads/Crazy-Dog-Faces-40-300x300.jpg" alt="Image Preview Here">
</section>